        <Label Content="ATM" Height="56" HorizontalAlignment="Left" Margin="12,12,0,0" Name="label1" VerticalAlignment="Top" Width="191" FontSize="35" Foreground="White" FontFamily="Verdana" />
        <Button Background="#00000000" BorderBrush="#00000000" FontFamily="Segoe UI" FontSize="28" FontStretch="Normal" FontWeight="Normal" Foreground="White" Height="46" HorizontalAlignment="Left" HorizontalContentAlignment="Left" Margin="0,142,0,0" Name="button3" VerticalAlignment="Top" Width="203" Content="Змінити PIN" Click="button3_Click" />
        <Button Background="#00000000" BorderBrush="#00000000" Content="Назад" FontFamily="Segoe UI" FontSize="28" FontStretch="Normal" FontWeight="Normal" Foreground="White" Height="46" HorizontalAlignment="Right" HorizontalContentAlignment="Right" Margin="0,217,0,0" Name="button6" VerticalAlignment="Top" Width="203" Click="button6_Click" />
