<Window x:Class="ATM.ChooseLanguageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ChooseLanguageWindow" Height="350" Width="575" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Closed="Window_Closed">
    <Grid>
        <Label Content="ATM" Height="56" HorizontalAlignment="Left" Margin="12,12,0,0" Name="label1" VerticalAlignment="Top" Width="191" FontSize="35" Foreground="White" FontFamily="Verdana" />
        <Button Content="ENG" Height="46" HorizontalAlignment="Left" Margin="0,112,0,0" Name="button1" VerticalAlignment="Top" Width="150" Background="#00000000" BorderBrush="#00000000" Foreground="White" FontFamily="Segoe UI" FontSize="28" FontWeight="Normal" FontStretch="Normal" HorizontalContentAlignment ="Left" Click="button1_Click" />
        <Image Height="66" Margin="102,102,0,0" Name="image1" Stretch="Fill" VerticalAlignment="Top" Source="/ATM;component/Images/GB.png" HorizontalAlignment="Left" Width="46" OpacityMask="#82000000" />
        <Button Content="UKR" Height="46" Margin="0,199,0,0" Name="button2" VerticalAlignment="Top" Background="#00000000" BorderBrush="#00000000" Foreground="White" FontFamily="Segoe UI" FontSize="28" FontWeight="Normal" FontStretch="Normal" HorizontalContentAlignment ="Left" HorizontalAlignment="Left" Width="150" Click="button2_Click" />
        <Image Height="66" HorizontalAlignment="Left" Margin="101,189,0,0" Name="image2" Stretch="Fill" VerticalAlignment="Top" Width="48" Source="/ATM;component/Images/UA.png" OpacityMask="#82000000" />
        <Label Content="Chose language" FontFamily="Verdana" FontSize="25" Foreground="White" Height="56" HorizontalContentAlignment="Center" Margin="12,12,12,0" Name="label2" VerticalAlignment="Top" />
        <Label Content="Оберіть мову" FontFamily="Verdana" FontSize="20" Foreground="White" Height="56" Margin="12,50,12,0" Name="label3" VerticalAlignment="Top" HorizontalContentAlignment="Center" />
        <Grid.Background>
            <LinearGradientBrush EndPoint="1,1" StartPoint="0,0">
                <GradientStop Color="#FF3D96B7" Offset="0" />
                <GradientStop Color="#FFA4AEB7" Offset="1" />
                <GradientStop Color="#B51F8065" Offset="0.5" />
            </LinearGradientBrush>
        </Grid.Background>
    </Grid>
</Window>
